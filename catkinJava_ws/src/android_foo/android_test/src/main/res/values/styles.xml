<resources>


    <!-- Base application theme. -->
    <style name="AppTheme_main" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_main.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme_main.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme_main.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->


    <style name="AppTheme_autoNav" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppTheme_autoNav.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme_autoNav.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme_autoNav.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ButtonFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15dip</item>
    </style>

</resources>
